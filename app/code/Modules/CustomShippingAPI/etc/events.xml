<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="checkout_submit_all_after">
        <observer name="order_create" instance="Modules\CustomShippingAPI\Observer\OrderCreate"/>
    </event>

    <event name="order_cancel_after">
        <observer name="OrderDelete" instance="Modules\CustomShippingAPI\Observer\OrderDelete"/>
    </event>

    <event name="sales_order_save_after">
        <observer name="OrderUpdate" instance="Modules\CustomShippingAPI\Observer\OrderUpdate"/>
    </event>
</config>